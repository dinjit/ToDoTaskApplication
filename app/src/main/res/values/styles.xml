<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0a365a</item>
        <item name="colorPrimaryDark">#0a365a</item>
        <item name="colorAccent">@color/theme_color</item>
    </style>
    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/theme_color</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/alert_dialog_background</item>

    </style>

</resources>
